# Ignore .yy files for language statistics
*.yy linguist-generated=true
 
# force LF for metadata files for merge simplicity
*.gml text eol=lf
*.yy text eol=lf
*.yyp text eol=lf
*.json text eol=lf
* text=auto

# Treat GameMaker and source files as text with normalized line endings
*.gml   text eol=lf
*.yy    text eol=lf
*.yyp   text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.csv   text eol=lf
*.svg   text eol=lf
*.ps1   text eol=lf

# Mark common binary assets
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.bmp   binary
*.webp  binary
*.psd   binary
*.wav   binary
*.ogg   binary
*.mp3   binary
*.ttf   binary
*.otf   binary
*.exe   binary
*.dll   binary
*.zip   binary
*.7z    binary
*.rar   binary
*.tar   binary
*.gz    binary

# If you want Git LFS later, enable and track assets explicitly:
# git lfs install
# git lfs track "*.png" "*.jpg" "*.ogg" "*.wav" "*.ttf" "*.psd"