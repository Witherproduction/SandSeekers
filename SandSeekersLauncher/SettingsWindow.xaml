<Window x:Class="SandSeekersLauncher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres" Height="420" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF2C3E50">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Paramètres du lanceur" FontSize="18" FontWeight="Bold" Foreground="White"/>

        <StackPanel Grid.Row="1" Margin="0,15,0,0" Orientation="Vertical" >
            <!-- Chemin d'installation -->
            <TextBlock Text="Chemin d’installation du jeu" Foreground="#FFBDC3C7"/>
            <DockPanel Margin="0,5,0,10">
                <TextBox x:Name="InstallPathText" MinWidth="420" Text=""/>
                <Button Content="Parcourir…" Margin="10,0,0,0" Width="100" Click="BrowseInstallPath_Click"/>
            </DockPanel>

            <TextBlock Text="GitHub – Propriétaire (owner)" Foreground="#FFBDC3C7" Margin="0,10,0,0"/>
            <TextBox x:Name="RepoOwnerText" Text=""/>

            <TextBlock Text="GitHub – Nom du dépôt (repo)" Foreground="#FFBDC3C7" Margin="0,10,0,0"/>
            <TextBox x:Name="RepoNameText" Text=""/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Annuler" Width="100" Margin="0,0,10,0" IsCancel="True"/>
            <Button Content="Enregistrer" Width="120" IsDefault="True" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>